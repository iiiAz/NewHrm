@model HRMEFentity.Entity.TwoLevel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <style type="text/css">
        #sel {
        width:100px;
        text-align:center;
       
        }
    </style>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    @using (Ajax.BeginForm("Create", new AjaxOptions() { HttpMethod = "Post" }))
    {
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置--II级机构添加
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    <input type="button" value="返回" class="BUTTON_STYLE1"
                           onclick="history.back();">
                </td>
            </tr>
        </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        <!--name="cfsk.firstKindId" id="firstKindId" onchange="change()"-->
                        <div class="form-group">
                            @Html.DropDownList("first_kind_id", @ViewBag.list as IEnumerable<SelectListItem>,new { @id = "sel"})
                            @Html.ValidationMessageFor(e => e.first_kind_name)
                        </div>
                    </td>
                </tr>   
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        II级机构编号
                    </td>
                    <td width="81%" class="TD_STYLE2">
                        @Html.TextBox("second_kind_id", "", new
                         {
                             @class = "form-control",
                             placeholder = "请输入II级机构编号"
                         })
                        @Html.ValidationMessageFor(e => e.second_kind_id)
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        II级机构名称
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextBox("second_kind_name", "", new
                         {
                             @class = "form-control",
                             placeholder = "请输入II级机构名称"
                         })
                        @Html.ValidationMessageFor(e => e.second_kind_name)
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextArea("second_salary_id", "", new
                           {
                               @class = "TEXTAREA_STYLE1",
                               @rows = "4",
                               placeholder = "请输入薪酬发放责任人编号"
                           })
                        @Html.ValidationMessageFor(e => e.second_salary_id)
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextArea("second_sale_id", "", new
                          {
                              @class = "TEXTAREA_STYLE1",
                              @rows = "4",
                              placeholder = "请输入销售责任人编号"
                          })
                        @Html.ValidationMessageFor(e => e.second_sale_id)
                    </td>
                </tr>
            </table>
    }
</body>
</html>
