
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/table.css" type="text/css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
      
    
        var a = @Html.ViewBag.d;
        alert(a);
        if (a > 0) {
            alert("s")
        }
        </script>
</head>
<body>
    <div id="all">
        <form method="post" action="../customiz/customizAction!findMajorKind">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位分类设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        @Html.ActionLink("添加", "Create")
                        
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="46%" class="TD_STYLE1">
                        职位分类编号
                    </td>
                    <td width="47%" class="TD_STYLE1">
                        职位分类名称
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>


                <tr v-for="i in dt">
                @*<tr v-for="(i,index) in dt">*@
                    <td>
                        {{i.Id}}
                    </td>
                    <td>
                        {{i.major_kind_name }}
                    </td>
                   
                        @*@Html.ActionLink("删除", "Delete", new {Href= "['/config_major_kind/Delete/'+i.Id]" }, new { @onclick = "return b('你确定要删除吗？')" });*@
                    <td>
                    @*<a v-bind:href="['/config_major_kind/Delete/'+i.Id]" onclick="return confirm('你确定要删除吗？')">删除</a>*@
                        <a v-on:click="sc([i.Id])">删除</a>

                    </td>
                    
                </tr>



            </table>
            <p>
    </form>
    </div>
    <script type="text/javascript">
        var vue = new Vue({
            el: "#all",
            data:{         
                dt: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_major_kind/FillTable",
                        type: "post",
                        data: "",
                        success: function (mag) {
                            var dd = eval("(" + mag + ")");
                            t.dt = dd;
                        }
                    });
                },            
                sc: function (id) {
                    var d= confirm("确定要删除");
                    if (d == false) {
                        alert("删除取消");
                    } else {
                        $.ajax({
                            url: "/config_major_kind/Del?id=" + id,
                            type: "post",
                            data: "",
                            success: function (mag) {
                                if (mag > 0) {
                                    alert("删除成功");
                                    vue.load();
                                }                               
                            }
                        });
                    }


                }

            }, created: function () {
                this.load();
            }
        })
    </script>
</body>
</html>
