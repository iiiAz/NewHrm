
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet"
          href="~/css/table.css" type="text/css">
    <script type="text/javascript"
            src="~/javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <div id="all"> 
        <form method="post" action="../customiz/customizAction!findAttribute">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职称设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right"></td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="80%" class="TD_STYLE1">
                        职称名称
                    </td>
                    <td width="20%" class="TD_STYLE1" align="center">
                        删除
                    </td>
                </tr>


                @*<tr v-for="i in dt">*@
                    <tr v-for="(i,index) in dt">
                    <td>
                        {{i.attribute_name}}
                    </td>
                    <td>
                        @*v-bind:href="['/config_major_kind/Delete/'+i.Id]"
                        @Html.ActionLink("删除","","",new { @class="s"} )
                        @Html.ActionLink("删除", "Delete", new {Href= "['/config_major_kind/Delete/'+i.Id]" }, new { @onclick = "return b('你确定要删除吗？')" });*@
                    <a  v-on:click="sc([i.pbc_Id])" >删除</a>
                    </td>

                </tr>
            </table>
            <p>

        </form>
    </div>
    <script type="text/javascript">
        var vue = new Vue({
            el: "#all",
            data:{
                dt: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_public_char/FillTable",
                        type: "post",
                        data: "",
                        success: function (mag) {
                            var dd = eval("(" + mag + ")");
                            t.dt = dd;
                        }
                    });
                },
                sc: function (id) {
                    var i = confirm("确定要删除？");
                    if (i == false) {
                        alert("删除取消");
                    } else {
                        $.ajax({
                            url: "/config_public_char/Deete?id=" + id,
                            type: "post",
                            data: "",
                            success: function (mag) {
                                if (mag > 0) {
                                    alert("删除成功");
                                    vue.load();
                                }


                            }
                        });

                    }
                }
            }, created: function () {
                this.load();
            }
        })
    </script>

</body>
</html>
