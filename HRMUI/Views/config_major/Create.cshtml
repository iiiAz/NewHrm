@model HRMEFentity.Entity.config_major
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet"
          href="~/css/table.css" type="text/css">
    <script type="text/javascript"
            src="~/javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
@using (Ajax.BeginForm("Create", new AjaxOptions { HttpMethod = "post" }))
{
    <table width="100%">
        <tr>
            <td>
                <font color="black">
                    您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置--职位添加
                </font>
            </td>
        </tr>
        <tr>
            <td align="right">
                <input type="submit" value="提交" class="BUTTON_STYLE1">
                <input type="button" value="返回" class="BUTTON_STYLE1"
                       onclick="history.back();">
            </td>
        </tr>
    </table>

        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">

            <tr>
                <td class="TD_STYLE1" width="19%">
                    职位分类编号
                </td>
                <td class="TD_STYLE2" width="81%">
               @Html.EditorFor(model => model.major_kind_id, new { htmlAttributes = new { @style = "width: 332px"}})
                    @*<input type="text" class="INPUT_STYLE1" name="major_kind_id" />*@
                    @Html.ValidationMessageFor(model => model.major_kind_id)
                 </td>
            </tr>
            <tr>
                <td class="TD_STYLE1" width="19%">
                    职位分类名称
                </td>
                <td class="TD_STYLE2" width="81%">
                    <input type="text" class="INPUT_STYLE1" name="major_kind_name" />
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1" width="19%">
                    职位编号
                </td>
                <td class="TD_STYLE2" width="81%">
                    @*<input type="text" class="INPUT_STYLE1" name="major_id" />*@
                    @Html.EditorFor(model => model.major_id, new { htmlAttributes = new { @style = "width: 332px" } })
                    @*<input type="text" class="INPUT_STYLE1" name="major_kind_id" />*@
                    @Html.ValidationMessageFor(model => model.major_id)
                </td>
            </tr>
            <tr>
                <td class="TD_STYLE1" width="19%">
                    职位名称
                </td>
                <td class="TD_STYLE2" width="81%">
                    <input type="text" class="INPUT_STYLE1" name="major_name" />
                </td>
            </tr>
        </table>
}
</body>
</html>
