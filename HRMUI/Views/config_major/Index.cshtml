
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet"
			href="~/css/table.css" type="text/css">
		<script type="text/javascript"
			src="~/javascript/comm/comm.js">
		</script>
		
		<script type="text/javascript" src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
		</head>
<body>
    <div id="all"> 
        <form method="post" action="../customiz/customizAction!findMajor">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--职位设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        @Html.ActionLink("添加", "Create")
                           </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="22%" class="TD_STYLE1">
                        职位分类编号
                    </td>
                    <td width="23%" class="TD_STYLE1">
                        职位分类名称
                    </td>
                    <td width="26%" class="TD_STYLE1">
                        职位编号
                    </td>
                    <td width="24%" class="TD_STYLE1">
                        职位名称
                    </td>
                    <td width="5%" class="TD_STYLE1">
                        删除
                    </td>
                </tr>


                <tr v-for="(i,index) in dt">
                    <td class="TD_STYLE2">
                     {{i.major_kind_id }}
                    </td>
                    <td class="TD_STYLE2">
                      {{i.major_kind_name}}
                    </td>
                    <td class="TD_STYLE2">
                        {{i.major_id }}
                    </td>
                    <td class="TD_STYLE2">
                        {{i.major_name}}
                    </td>
                    <td class="TD_STYLE2">
                        <a v-on:click="sc([i.Id])">删除</a>
                    </td>
                </tr>
            </table>
            <p>

        </form>
    </div>

    <script type="text/javascript">
        var vue = new Vue({
            el: "#all",
            data:{
                dt: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_major/FillTable",
                        type: "post",
                        data: "",
                        success: function (mag) {
                            var dd = eval("(" + mag + ")");
                            t.dt = dd;
                        }
                    });
                },
                sc: function (id) {
                    var d= confirm("确定要删除");
                    if (d == false) {
                        alert("删除取消");
                    } else {
                        $.ajax({
                            url: "/config_major/Del?id=" + id,
                            type: "post",
                            data: "",
                            success: function (mag) {
                                if (mag > 0) {
                                    alert("删除成功");
                                    vue.load();
                                }                               
                                   }
                                });
                    }


                }
            }, created: function () {
                this.load();
            }
        })
    </script>

</body>
</html>
