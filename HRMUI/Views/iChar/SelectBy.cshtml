
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SelectBy</title>
    <link rel="stylesheet" href="~/css/table.css" type="text/css">
    <script type="text/javascript" src="~/javascript/comm/comm.js"></script>
    <script type="text/javascript" src="~/javascript/jquery-1.7.2.js"></script>
    <script src="~/Scripts/vue.js"></script>

</head>
<body>
    <div id="All">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--薪酬管理设置--薪酬项目设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1" onclick="window.location.href = '/iChar/CreateAboutPay'">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding="0" cellspacing="1" bordercolorlight="#848284" bordercolordark="#eeeeee" class="TABLE_STYLE1">
            <tr height="20">
                <td width="80%" class="TD_STYLE1" align="center">薪酬项目名称</td>
                <td width="20%" class="TD_STYLE1" align="center">操作</td>
            </tr>

            <tr v-for="i in dt">
                <td class="TD_STYLE2">{{i.attribute_name}}</td>
                <td align="center" class="TD_STYLE2"><a v-on:click="Del([i.Id])" href="javascript:void(0)">删除</a></td>
            </tr>
        </table>
        <br>
        <br>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#All",
            data: {
                dt: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/iChar/SelectByattribute_kind",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.dt = dd;
                        }
                    });
                },
                Del: function (obj) {
                    if (confirm("Sure?")) {
                        //window.location.href = "/iChar/Delete/" + obj;
                        var v = this;
                        $.ajax({
                            url: "/iChar/Delete/" + obj,
                            type: "post",
                            data: "",
                            success: function (msg) {
                                if (msg == "okk") {
                                    v.load();
                                    alert("操作完成!");
                                }
                                else {
                                    alert("操作失败!");
                                }
                            }
                        });
                    }
                }
            },
            created: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
