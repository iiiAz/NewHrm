@model HRMEFentity.Entity.config_public_char

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<title>Create</title>*@
    <link rel="stylesheet" href="~/css/table.css" type="text/css">
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/javascript/comm/comm.js"></script>
</head>
<body>
    
    @*Ajax*@
    @using (Ajax.BeginForm("Create", "iChar", new AjaxOptions() { HttpMethod = "Post" }))
    {        
        @Html.AntiForgeryToken()

        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置--公共属性添加
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="submit" value="提交" class="BUTTON_STYLE1">
                    @Html.ActionLink("返回", "Index")
                </td>
            </tr>
        </table>

            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td class="TD_STYLE1" width="19%">
                        属性种类
                    </td>
                    <td class="TD_STYLE2" width="81%">
                        @*<input type="text" class="INPUT_STYLE1" name="cpc.attributeKind" />*@
                        @Html.EditorFor(model => model.attribute_kind, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.attribute_kind, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        属性名称
                    </td>
                    <td class="TD_STYLE2">
                        @*<input type="text" class="INPUT_STYLE1" name="cpc.attributeName" />*@
                        @Html.EditorFor(model => model.attribute_name, new { htmlAttributes = new { @class = "INPUT_STYLE1" } })
                        @Html.ValidationMessageFor(model => model.attribute_name, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
    }
</body>
</html>
